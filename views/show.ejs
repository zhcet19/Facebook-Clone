<%- include ('./partials/header') %>

<div clas="container">
	<div class="row">
		<div class="col-md-3">
		 <p class="lead">
			  FAKEBOOK
		</p>
		<div class="list-group">
			<li class="list-group-item active">Info 1</li>
			<li class="list-group-item">Info 2</li>
			<li class="list-group-item">Info 3 </li>
		</div>
		</div>		
	<div class="col-md-9">
		<div class="thumbnail" >
			<img class="img-responsive" src="data:image/<%=image.img.contentType%>;base64, 
					<%=image.img.data.toString('base64')%>" >
			<div class="caption-full">
				
				<h4>
					<a><%=image.name%></a>
				</h4>
				<p>
					<%=image.desc %>
				</p>
				 
				  <form   method="POST" action="/images/<%=image._id%>?_method=DELETE">
					<button class="btn btn-danger">
						Delete
					</button>
				  </form>
				
						
			</div>
		
		</div>
		
	</div>		

	</div>
	
</div>


